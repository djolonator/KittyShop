@model CatModel

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

<div class="container">
    <form asp-action="AddShopItem" asp-controller="Admin" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Race" class="control-label"></label>
            <input asp-for="Race" class="form-control" placeholder="Race" />
            <span asp-validation-for="Race" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FurrColor" class="control-label"></label>
            <input asp-for="FurrColor" class="form-control" placeholder="Furr Color" />
            <span asp-validation-for="FurrColor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EyesColor" class="control-label"></label>
            <input asp-for="EyesColor" class="form-control" placeholder="Eyes Color" />
            <span asp-validation-for="EyesColor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" placeholder="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" type="number" step=".01" min="1" class="form-control" placeholder="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="control-label"></label>
            <input asp-for="Image" type="file" class="form-control" accept="image/jpeg,image/jpg,image/png" placeholder="Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group d-grid">
            <input type="submit" value="Add product" class="btn btn-primary mt-2" />
        </div>
    </form>
</div>